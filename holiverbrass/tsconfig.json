{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app.scss": ["src/assets/scss/app.scss"],
      "@breakpoints": ["src/assets/scss/mixins/breakpoints.scss"],
      "@functions": ["src/assets/scss/functions/*"],
      "@hooks": ["src/hooks/hooks.ts"],
      "@images": ["src/assets/images/*"],
      "@logo": ["src/assets/images/company/logo.png"],
      "@mocks": ["mocks/mocks.ts"],
      "@schemas": ["src/assets/schemas/index.ts"],
      "@sections": ["src/components/sections/sections.ts"],
      "@services": ["src/services/services.ts"],
      "@types": ["src/types/types.ts"],
      "@ui": ["src/components/ui/ui.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
